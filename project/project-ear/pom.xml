    <dependencies>
        <dependency>
            <groupId>es.uma.interneteros</groupId>
            <artifactId>project-ejb</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>es.uma.interneteros</groupId>
            <artifactId>project-war</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>war</type>
        </dependency>
    </dependencies>
    <scm>
        <url>https://github.com/jfrchicanog/AgendaWeb.git</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <modules>
                        <ejbModule>
                            <groupId>es.uma.interneteros</groupId>
                            <artifactId>project-ejb</artifactId>
                        </ejbModule>
                        <webModule>
                            <groupId>es.uma.interneteros</groupId>
                            <artifactId>project-war</artifactId>
                        </webModule>
                    </modules>
                </configuration>

            </plugin>
        </plugins>
    </build>

</project>